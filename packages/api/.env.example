# ===========================================
# AadhaarChain API Configuration
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/aadhaarchain?schema=public

# ===========================================
# Redis Configuration (for caching & rate limiting)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ===========================================
# Solana Configuration
# ===========================================
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
SOLANA_COMMITMENT=confirmed

# Program IDs (deployed addresses)
IDENTITY_REGISTRY_PROGRAM_ID=8GFqPTjNGmxSb5d5RFaKqaTVwFENvdZfBHEXPNYnpump
VERIFICATION_ORACLE_PROGRAM_ID=4p85NmxNmAYm7HnKVvJSoSMz8CqBBLSTRvxcJNbfpump
CREDENTIAL_MANAGER_PROGRAM_ID=FoZKx8qQqKvpwHHzCvuqQtmKLx4zUqNqmJz7uSxYpGhS
REPUTATION_ENGINE_PROGRAM_ID=CpXfT4v2z1x8qQPnxhYa7Lm3KjNdEwRsYtUvWxYzAbCd
STAKING_MANAGER_PROGRAM_ID=StKEaNzPqbgJSTRVm5KxQm7CzNkPrWRFfBuYnXmjpump

# Oracle Wallet (server-side signing for oracle operations)
ORACLE_PRIVATE_KEY=your-base58-encoded-private-key
ORACLE_PUBLIC_KEY=your-oracle-public-key

# ===========================================
# API Setu Configuration (Aadhaar Integration)
# ===========================================
API_SETU_BASE_URL=https://dg-sandbox.setu.co
API_SETU_CLIENT_ID=your-api-setu-client-id
API_SETU_CLIENT_SECRET=your-api-setu-client-secret
API_SETU_PRODUCT_INSTANCE_ID=your-product-instance-id

# DigiLocker Integration (for document verification)
DIGILOCKER_CLIENT_ID=your-digilocker-client-id
DIGILOCKER_CLIENT_SECRET=your-digilocker-client-secret
DIGILOCKER_REDIRECT_URI=http://localhost:3000/api/v1/auth/digilocker/callback

# ===========================================
# Rate Limiting Configuration
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# API Key specific limits
API_KEY_RATE_LIMIT_MULTIPLIER=10

# ===========================================
# Security Configuration
# ===========================================
BCRYPT_SALT_ROUNDS=12
ENCRYPTION_KEY=32-character-encryption-key-here

# Request signing (for webhook verification)
WEBHOOK_SECRET=your-webhook-signing-secret

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# ===========================================
# Monitoring & Metrics
# ===========================================
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry (optional error tracking)
SENTRY_DSN=

# ===========================================
# Feature Flags
# ===========================================
ENABLE_SWAGGER=true
ENABLE_WEBHOOKS=true
ENABLE_BIOMETRIC_VERIFICATION=false

# ===========================================
# Email Configuration (for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@aadhaarchain.io

# ===========================================
# SMS Configuration (for OTP)
# ===========================================
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
